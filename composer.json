{
    "name": "ht7/ht7-websocket-server",
    "license": "MIT",
    "description": "A simple PHP websocket server",
    "type": "library",
    "keywords": ["server", "websocket"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/tests", "/build"
        ]
    },
    "authors": [
        {
            "name": "1stthomas",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ht7\\WebsocketServer\\": "src/classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ht7\\WebsocketServer\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "support": {
        "source": "https://github.com/1stthomas/ht7-websocket-server"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/1stthomas/ht7-base"
        }
    ],
    "require": {
        "php": "^7.0",
        "ht7/ht7-base": "dev-master",
        "cboden/ratchet": "^0.4"
    },
    "require-dev": {
        "wikimedia/less.php": "^v3.0",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "test": ".\\vendor\\bin\\phpunit --configuration .\\tests\\configuration.xml --colors --testdox",
        "phpv": "php -v"
    }
}
